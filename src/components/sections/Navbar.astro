---
import NavigationMain from "./NavigationMain.astro";
import MobileMenu from "../MobileMenu";
import { isActiveLink } from "../../_utils";
import { NAVIGATION, NAV_MAIN, NAV_META } from "../../_settings";

const pathname = new URL(Astro.request.url).pathname;

const { class: className } = Astro.props;
---

<nav class={`Navbar ${className}`}>
    <div class="flex">
        <div class="left w-full flex justify-center">
            <NavigationMain class="py-4 hidden md:flex" />
        </div>

        <div class="left bg-white w-12 py-4">
            <div class="text-purple-1">
                <MobileMenu triggerContent="Menu" client:load>
                    <div>
                        <ul>
                            {
                                NAVIGATION.filter(
                                    (nav) => nav.menu === NAV_MAIN
                                ).map((item) => {
                                    return (
                                        <li class="py-1">
                                            <a
                                                class={`text-2xl uppercase transition-all ease-linear duration-200 ${isActiveLink(pathname, item.href) ? "text-purple-2" : "text-grey-lighter"} hover:text-purple-2`}
                                                href={item.href}
                                            >
                                                {item.title}
                                            </a>
                                        </li>
                                    );
                                })
                            }
                        </ul>
                    </div>
                </MobileMenu>
            </div>
        </div>
    </div>
</nav>
