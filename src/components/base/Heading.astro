---
const { tag = "h1" } = Astro.props;

const headings = [
    { tag: "h1", classList: ["text-5xl", "mb-1"] },
    { tag: "h2", classList: ["text-4xl", "mb-1"] },
    { tag: "h3", classList: ["text-3xl", "mb-1"] },
    { tag: "h4", classList: ["text-2xl", "mb-1"] },
    { tag: "h5", classList: ["text-1xl", "mb-1"] },
    { tag: "h6", classList: ["text-xl", "mb-1"] },
];

function getHeading() {
    const t = headings.findIndex((item) => item.tag === tag);
    if (t === -1) {
        return headings[0];
    }
    return headings[t];
}

const h = getHeading();

const TagName = h.tag;
const classList = ["Heading", ...h.classList, Astro.props.class];
---

<TagName class:list={classList}><slot /></TagName>
