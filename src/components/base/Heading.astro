---
const { tag = "h1", class: className = "" } = Astro.props;

const headings = [
    { tag: "h1", classList: ["text-5xl"] },
    { tag: "h2", classList: ["text-4xl"] },
    { tag: "h3", classList: ["text-3xl"] },
    { tag: "h4", classList: ["text-2xl"] },
    { tag: "h5", classList: ["text-1xl"] },
    { tag: "h6", classList: ["text-xl"] },
];

function getHeading() {
    const t = headings.findIndex((item) => item.tag === tag);
    if (t === -1) {
        return headings[0];
    }
    return headings[t];
}

const h = getHeading();

const TagName = h.tag;
const classList = ["Heading font-normal mb-4", ...h.classList, className];
---

<TagName class:list={classList}><slot /></TagName>
