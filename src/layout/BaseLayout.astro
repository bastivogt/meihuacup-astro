---
import { ViewTransitions } from "astro:transitions";
import { SITE_TITLE } from "../_settings";
import { getlangFromUrl } from "../_utils";
import "@fontsource-variable/open-sans";

const { title = "", description = "" } = Astro.props;

const lang = getlangFromUrl(new URL(Astro.request.url));
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <ViewTransitions />
        <title>{SITE_TITLE} - {title}</title>
    </head>
    <body class="text-gray-800 text-xl leading-8 overflow-x-hidden text-wrap">
        <slot />
    </body>
</html>

<style is:global>
    @keyframes fadeInAnimation {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    @keyframes fadeOutAnimation {
        0% {
            opacity: 1;
        }
        100% {
            opacity: 0;
        }
    }

    @keyframes rotationAnimation {
        0% {
            transform: rotate(0);
        }
        25% {
            transform: rotate(30deg);
        }
        50% {
            transform: rotate(0);
        }
        75% {
            transform: rotate(-30deg);
        }
        100% {
            transform: rotate(0);
        }
    }

    .fade-in {
        animation: fadeInAnimation 200ms ease;
    }

    .fade-out {
        animation: fadeOutAnimation 200ms ease;
    }

    .rotation-loop {
        animation: rotationAnimation 10s linear infinite;
    }
</style>
